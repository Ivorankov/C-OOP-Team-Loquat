<Window x:Class="WpfApplication1.LaptopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Laptop" MinHeight="300" MaxHeight="450" MinWidth="700" MaxWidth="700">
    <Window.Resources>
        <ResourceDictionary Source="../../Styles.xaml" />
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Laptop"></TextBlock>
        <TextBlock Text="" x:Name="LaptopInformation" TextAlignment="Left"/>
        <Button Content="Add to cart" Click="AddToCart_Click"/>
    </StackPanel>
</Window>
